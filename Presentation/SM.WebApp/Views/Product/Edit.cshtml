@model SM.Business.Models.ProductModel

@{
    ViewData["Title"] = "Edit";
}
<style>
    body {
        background-image: url('/images/foto.jpg');
        background-size: cover;
    }

</style>

<h1 class="edit-title">Düzenle</h1>
<h4 class="h4-title">Burada Ürün bilgilerini düzenleyebilirisiniz.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" class="form-control" type="hidden" />
            <input asp-for="StoreId" class="form-control" type="hidden"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label label-text"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label label-text"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label label-text"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="return-link">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
