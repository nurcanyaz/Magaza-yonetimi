@model SM.Business.Models.ProductModel

@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        background-image: url('/images/foto.jpg');
        background-size: cover;
    }

</style>


<h1 class="title-text">Ürün Ekle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" type="hidden"/>
            <div class="form-group">
                <input asp-for="StoreId" class="form-control" type="hidden" value="@ViewBag.StoreId"/>
                <label asp-for="Name" class="control-label label-text"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label label-text"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label label-text"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label label-text">Ürün Görseli Seç</label>
                <input type="file" name="imageFiles" multiple />
            </div>
            <div class="form-group mt-1">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="return-link">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
